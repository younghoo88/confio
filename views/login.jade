doctype html
html
    head
        meta(charset='utf-8')
        title Login Page
    body
        form.loginForm(action='/user/login', method='post')
            .emailContainer
                label Email :
                input(type='text', name='email')
            .passwordContainer
                label Password :
                input(type='text', name='password')
            .buttonContainer
                input(type='submit', name='Submit')
